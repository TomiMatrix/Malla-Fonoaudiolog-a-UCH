body {
  font-family: sans-serif;
  padding: 20px;
  background: #f5f5f5;
}

h1 {
  text-align: center;
}

.malla {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: center;
}

.semestre {
  background: #ffffff;
  border: 1px solid #ccc;
  padding: 10px;
  width: 200px;
  border-radius: 10px;
}

.ramo {
  background-color: #cfe3ff;
  border: 1px solid #6495ed;
  margin: 5px 0;
  padding: 8px;
  border-radius: 5px;
}

